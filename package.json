{
	"name": "@zedsols/ciao_node",
	"description": "Node Backend for Ciao App",
	"version": "1.0.0",
	"author": "Shayan Ameen",
	"license": "MIT",
	"main": "dist/main.js",
	"type": "module",
	"packageManager": "pnpm@9.7.1",
	"scripts": {
		"prod:build": "tsc",
		"prod:start": "node --env-file=.env dist/main.js",
		"prod:watch": "node --env-file=.env --watch dist/main.js",
		"dev:start": "tsx --env-file=.env src/main.ts",
		"dev:watch": "tsx --env-file=.env --watch src/main.ts",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"db:push": "prisma db push",
		"db:pull": "prisma db pull",
		"db:seed": "prisma db seed",
		"db:studio": "prisma studio",
		"check:only": "biome check",
		"check:safe": "biome check --write",
		"check:force": "biome check --unsafe --write"
	},
	"dependencies": {
		"@prisma/client": "5.17.0",
		"@trycourier/courier": "^6.2.1",
		"argon2": "^0.40.3",
		"chalk": "^5.3.0",
		"cors": "^2.8.5",
		"date-fns": "^3.6.0",
		"express": "^4.19.2",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"socket.io": "^4.7.5",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.14.11",
		"prisma": "^5.17.0",
		"tsx": "^4.16.2",
		"typescript": "^5.5.3"
	}
}
